@require '../../vars'

.z-search
  flex1()
  overflow: auto
  -webkit-overflow-scrolling: touch

  > .search
    padding: 32px

    > .title
      font-h5()
      max-width: 1200px
      margin: 0 auto 20px auto

    > .search-box
      shadow-1()
      background: getColor('$bgColor')
      max-width: 1200px
      margin: 0 auto
      border-radius: 12px

    > .alt
      max-width: 1200px
      margin: 24px auto 0 auto
      cursor: pointer

      > .or
        display: inline-block
        margin-right: 4px

      > .text
        font-button()
        text-decoration: underline
        display: inline-block

  > .results
    padding: 48px 32px
    shadow-upper-1()

    > .container
      container()

      > .title
        font-h5()
        margin-bottom: 20px
        display: flex
        align-items: center

        > .loading
          display: none
          margin-left: 20px
          margin-top: -12px

          &.is-loading
            display: block

      > .filter-bar
        margin-bottom: 16px

  @media (min-width: $breakPointMedium)
    &.has-searched
      > .search > .search-box
        grid-template-columns: 1fr 1px 1fr

        > .button
          display: none

    > .search
      > .title
        font-h4()

      > .search-box
        // display: flex
        // align-items: center
        display: grid
        grid-template-columns: 1fr 1px 1fr 165px
        grid-column-gap: 0
        grid-row-gap: 0
        align-items: center

        &.specific
          grid-template-columns: 1fr 165px


        > .search-tags
          height: 100%
          min-width: 0
          display: flex

        > .divider
          width: 1px
          height: 56px
          background: getColor('$bgText6')

        > .button
          padding: 20px

@require '../../vars'

.z-fund
  flex1()
  // display: flex
  // flex-direction: column
  // min-width: 0
  overflow-y: scroll
  -webkit-overflow-scrolling: touch

  &.scroll-fit-content
    > .content
      height: fit-content

  > .quick-info
    padding: 48px 32px
    box-sizing: border-box
    background: getColor('$bgColor')
    flex-shrink: 0

  > .content
    // flex1()
    // display: flex
    // min-width: 0
    background: getColor('$bgColorAlt1')
    padding: 36px 32px
    min-width: 0
    min-height: 0

    > .inner
      container()
      height: 100%
      // flex1()
      // display: flex
      // min-width: 0
      // flex-direction: column

  @media (min-width: $breakPointMedium)
    display: grid
    grid-template-columns: 428px 1fr
    grid-column-gap: 0
    grid-row-gap: 0

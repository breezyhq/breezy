@require '../../vars'

.z-fund-at-a-glance
  > .name
    font-h4()
    margin-bottom: 24px

  > .top-metrics
    display: flex
    margin-bottom: 42px

    > .metric
      flex1()
      text-align: center

      &:first-child
        border-right: 2px solid getColor('$bgText6')

      > .value
        font-h5()
        color: getColor('$primaryMain')
        margin-bottom: 2px

      > .name
        font-subtitle1()

  > .block
    margin-top: 20px

    > .title
      font-subtitle2()
      margin-bottom: 4px

    > .text
      font-body1()

    > .link
      color: getColor('$primary500')

    > .metrics
      display: flex

      > .metric
        flex1()
        background: getColor('$primary100')
        text-align: center
        padding: 10px 0
        border-radius: 4px

        > .value
          font-h6()

        &:first-child
          margin-right: 16px

    > .mission
        &.is-truncated
          max-height: 70px // FIXME
          overflow: hidden
          position: relative

          &::after
            content: ''
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), getColor('$bgColor'))

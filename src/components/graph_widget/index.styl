@require '../../vars'

.z-graph-widget
  margin-bottom: -16px
  // without this, labels don't show when graph is in 2nd column of
  // column-count: 2
  will-change: transform
  width: 100%
  height: 100%

  .ct-line
    stroke: getColor('$secondary500')
    stroke-width: 3px
    stroke-linecap: round
    fill: transparent

  .ct-grid
    stroke: getColor('$bgText12')
    stroke-width: 1px

  .ct-label
    font-micro()
    color: getColor('$bgText54')

    &.ct-horizontal
      margin-left: -12px

    &.ct-vertical
      transform: translateY(50%)
      display: inline-block

  .ct-point
    display: none
    // stroke: getColor('$secondary500')
    // stroke-width: 6px
    // stroke-linecap: round

  .ct-area
    fill: url(#gradient)
    opacity: 0.2

@require '../../vars'

.z-tap-tabs
  flex1()
  display: flex
  flex-direction: column

  > .menu
    display: flex
    margin-bottom: 24px

    > .tap-tab
      font-subtitle1(false, medium)
      margin-right: 8px
      padding: 12px 16px
      border-radius: 24px
      cursor: pointer

      &:hover
        background: getColor('$bgText6')

      &.is-selected
        font-subtitle1()
        background: getColor('$primary300')
        color: getColor('$primary300Text')

  > .current-tab
    flex1()
    display: flex
    flex-direction: column

@require '../../vars'

.z-filter-content-dialog_content
  shadow-1()
  background: getColor('$bgColor')
  border-radius: 12px

  > .content
    padding: 20px
    min-width: 320px
    max-width: 800px
    max-height: 600px
    overflow: auto
    -webkit-overflow-scrolling: touch

  > .actions
    border-top: 1px solid getColor('$bgText12')
    padding: 16px
    display: flex

    > .save
      margin-left: auto

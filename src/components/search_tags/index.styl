@require '../../vars'

.z-search-tags
  flex1()
  padding: 20px 20px 12px 24px
  transition: box-shadow 0.25s
  position: relative

  &:hover
    cursor: pointer

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      box-sizing: border-box
      border: 3px solid getColor('$bgText6')
      border-radius: 12px

  > .title
    font-tbd-name()

  > .tags
    font-body1(medium)
    margin-top: 8px

  @media (min-width: $breakPointMedium)
    > .tags
      margin-top: 4px

